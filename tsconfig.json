{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "views/*": ["views/*"],
      "components/*": ["views/components/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"]
    },
    "moduleResolution": "node",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  }
}